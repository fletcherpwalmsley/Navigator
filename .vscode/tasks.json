{
    "tasks": [
        {
            "label": "Minimal Build (No TFlite, Hailo, Libcamera)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-DUSE_TFLITE=OFF",
                "-DUSE_HAILO=OFF",
                "-DUSE_LIBCAMERA=OFF",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-S",
                "deploy/src/",
                "-B",
                "deploy/src/build-minimal"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Build a minimal build without major external dependencies (except OpenCV)"
        },
        {
            "label": "Build without TFLite",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-DUSE_TFLITE=OFF",
                "-S",
                "deploy/src/",
                "-B",
                "deploy/src/build-no-tflite"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Build the project without TensorFlow Lite support"
        }
    ],
    "version": "2.0.0"
}